<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grid_selector"
    android:clickable="true"
    android:id="@+id/gridFragmentChooseConstraintLayoutID"
    >

    <ImageView
        android:id="@+id/chooseGridImageView"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:paddingTop="@dimen/chooseGridBoardImagePadding"
        android:paddingBottom="@dimen/chooseGridBoardImagePadding"
        android:paddingStart="@dimen/chooseGridBoardImagePadding"
        android:paddingEnd="@dimen/chooseGridBoardImagePadding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/grid_3x3"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.503"
        app:layout_constraintRight_toLeftOf="@+id/chooseGridAmountText"
        />

    <TextView
        android:id="@+id/chooseGridAmountText"
        style="@style/Header"
        android:textSize="@dimen/header_font_size"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="25dp"
        android:text="HxW"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>