<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayMenuFragments.SinglePlayerMenu.SinglePlayer"
    android:background="@color/appBackground"
    >
    <TextView
        android:id="@+id/textView2"
        style="@style/HeaderFontStyle"
        android:textSize="@dimen/header_font_size"
        android:layout_marginTop="16dp"
        android:text="CHOOSE GRID"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <FrameLayout
        android:id="@+id/grid3x3"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/grid5x5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginTop="8dp">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/grid5x5"
        app:layout_constraintBottom_toTopOf="@+id/grid7x7"
        app:layout_constraintVertical_weight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grid3x3"
        android:layout_marginBottom="0dp">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/grid7x7"
        app:layout_constraintTop_toBottomOf="@+id/grid5x5"
        app:layout_constraintVertical_weight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp">

    </FrameLayout>
</android.support.constraint.ConstraintLayout>
