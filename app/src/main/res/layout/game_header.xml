<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/game">


    <TextView
        android:id="@+id/scoresTextViewID"
        style="@style/InGameText"
        android:layout_marginStart="@dimen/inGamePadding"
        android:layout_marginTop="@dimen/inGamePadding"
        android:text="@string/scores"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/circleScoreAmountID"
        style="@style/InGameText"
        android:textColor="@color/circleBlue"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:text="XX"
        app:layout_constraintBottom_toBottomOf="@+id/scoresTextViewID"
        app:layout_constraintLeft_toRightOf="@+id/scoresTextViewID"
        app:layout_constraintTop_toTopOf="@+id/scoresTextViewID"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/scoresSeparatorID"
        style="@style/InGameText"
        android:paddingStart="@dimen/inGameTextSeparationSpace"
        android:paddingEnd="@dimen/inGameTextSeparationSpace"
        android:text=":"
        app:layout_constraintBottom_toBottomOf="@+id/circleScoreAmountID"
        app:layout_constraintLeft_toRightOf="@+id/circleScoreAmountID"
        app:layout_constraintTop_toTopOf="@+id/circleScoreAmountID"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/crossScoresAmountID"
        style="@style/InGameText"
        android:textColor="@color/crossRed"
        android:text="XX"
        app:layout_constraintBottom_toBottomOf="@+id/scoresSeparatorID"
        app:layout_constraintTop_toTopOf="@+id/scoresSeparatorID"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/scoresSeparatorID" />

    <TextView
        android:id="@+id/drawsText"
        style="@style/InGameText"
        android:text="@string/draws"
        app:layout_constraintRight_toLeftOf="@+id/drawsScoresAmountID"
        android:layout_marginEnd="@dimen/inGameTextSeparationSpace"
        app:layout_constraintBottom_toBottomOf="@+id/drawsScoresAmountID"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@+id/drawsScoresAmountID"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/drawsScoresAmountID"
        style="@style/InGameText"
        android:layout_marginEnd="@dimen/inGamePadding"
        android:layout_marginTop="0dp"
        android:text="XX"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scoresTextViewID" />

    <TextView
        android:id="@+id/turnText"
        style="@style/InGameText"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:text="@string/turn"
        app:layout_constraintLeft_toLeftOf="@+id/scoresTextViewID"
        app:layout_constraintTop_toBottomOf="@+id/scoresTextViewID" />

    <TextView
        android:id="@+id/turnValueID"
        style="@style/InGameText"
        android:text="XXXXXX"
        app:layout_constraintTop_toTopOf="@+id/turnText"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/turnText"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@+id/turnText"
        android:layout_marginStart="@dimen/inGameTextSeparationSpace" />
</merge>