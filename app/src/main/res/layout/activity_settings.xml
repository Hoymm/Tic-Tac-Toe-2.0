<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hoymm.root.tictactoe2.DisplayMenu.MainMenu.Settings.Settings"
    android:background="@color/appBackground"
    >

    <TextView
        android:id="@+id/textView2"
        style="@style/HeaderFontStyle"
        android:text="Settings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/settingsDifficulyTextID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Difficuly:"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/settingsEasyTextID" />

    <TextView
        android:id="@+id/settingsEasyTextID"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/settingsMediumTextID"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:text="Easy"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/settingsDifficulyTextID" />

    <TextView
        android:id="@+id/settingsMediumTextID"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/settingsEasyTextID"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Medium"
        app:layout_constraintTop_toTopOf="@+id/settingsEasyTextID"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/settingsEasyTextID"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/settingsHardTextID"
        app:layout_constraintEnd_toStartOf="@id/settingsHardTextID"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/settingsHardTextID"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/settingsMediumTextID"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Hard"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/settingsMediumTextID"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@+id/settingsMediumTextID"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>
