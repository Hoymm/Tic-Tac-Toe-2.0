<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayMenu.MainMenu.SinglePlayerMenu.SinglePlayerMenu"
    android:background="@color/appBackground"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/settingsHeader"
        style="@style/Header"
        android:textSize="@dimen/header_font_size"
        android:text="@string/choose_grid"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <FrameLayout
        android:id="@+id/singlePlayerGridDifficulyChooseID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/settingsHeader"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <FrameLayout
            android:id="@+id/grid3X3ID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/grid5X5ID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <FrameLayout
            android:id="@+id/grid7X7ID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>