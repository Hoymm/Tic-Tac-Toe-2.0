<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayMenu.MainMenu.SinglePlayerMenu.SinglePlayerMenu"
    android:background="@color/appBackground"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">
    <TextView
        android:id="@+id/settingsHeader"
        style="@style/Header"
        android:textSize="@dimen/header_font_size"
        android:text="CHOOSE GRID"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <FrameLayout
        android:id="@+id/singlePlayerGridDifficulyChooseID"
        app:layout_constraintTop_toBottomOf="@+id/settingsHeader"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/grid3X3ID"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/grid5X5ID"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/singlePlayerGridDifficulyChooseID"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.444">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/grid5X5ID"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/grid3X3ID"
        app:layout_constraintRight_toLeftOf="@+id/grid7X7ID"


        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/grid3X3ID"
        app:layout_constraintTop_toTopOf="@+id/grid3X3ID"
        app:layout_constraintVertical_bias="0.0"
        >

    </FrameLayout>

    <FrameLayout
        android:id="@+id/grid7X7ID"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/grid5X5ID"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/grid5X5ID"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/grid5X5ID"
        app:layout_constraintVertical_bias="0.0">

    </FrameLayout>

</android.support.constraint.ConstraintLayout>